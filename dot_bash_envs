export GOPATH="$HOME/.go"
export DENO_INSTALL='/home/gisen/deno'
export PATH=$PATH:/home/gisen/.local/bin:$DENO_INSTALL/bin:$GOPATH/bin
# BEGIN ANSIBLE MANAGED BLOCK FOR CUDA
export PATH="/usr/local/cuda/bin:$HOME/.local/bin:$PATH"
export LD_LIBRARY_PATH="/usr/local/cuda/lib64:$LD_LIBRARY_PATH"
# END ANSIBLE MANAGED BLOCK FOR CUDA
if which zoxide > /dev/null; then
  eval "$(zoxide init bash --cmd j)"
fi
[ -f ~/.fzf.bash ] && source ~/.fzf.bash
export FZF_DEFAULT_OPTS='--height 40% --reverse --border'
export FZF_CTRL_T_COMMAND='fd -t f --hidden --follow -d 5 -E .git'
export FZF_CTRL_T_OPTS='--preview "bat  --color=always --style=header,grid --line-range :100 {}"'
if [ "$(lsb_release -sr)" = "20.04" ]; then
  source /opt/ros/noetic/setup.bash
  [ -f ~/ros/devel/setup.bash ] && source ~/ros/devel/setup.bash
elif [ "$(lsb_release -sr)" = "22.04" ]; then
  source /opt/ros/humble/setup.bash
  [ -f ~/cube_ws/install/setup.bash ] && source ~/cube_ws/install/setup.bash
fi
export LIBGL_ALWAYS_SOFTWARE=1
export EDITOR=vim
export DISPLAY=:0
